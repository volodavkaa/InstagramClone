@model InstagramClone.ViewModels.PostViewModel

@{
    ViewBag.Title = "Create Post";
}

<h2>Create a Post</h2>

<form asp-controller="Post" asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="ImageUrl">Upload Image</label>
        <input type="file" class="form-control" asp-for="ImageUrl" />
    </div>
    <div class="form-group">
        <label asp-for="Content">Content</label>
        <textarea class="form-control" asp-for="Content"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
