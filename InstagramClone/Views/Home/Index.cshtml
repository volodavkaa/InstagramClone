@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Instagram Profile</title>
    <link rel="stylesheet" href="~/css/profile.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>
    <header>
        <div class="container">
            <div class="logo">
                <h1>Instagram</h1>
            </div>
            <div class="search-bar">
                <input type="text" placeholder="Search">
            </div>
            <div class="nav-icons">
                <a href="#"><i class="fas fa-home"></i></a>
                <a href="#"><i class="fas fa-paper-plane"></i></a>
                <a href="#"><i class="fas fa-compass"></i></a>
                <a href="#"><i class="fas fa-heart"></i></a>
                <a href="@Url.Action("Profile", "Account")"><i class="fas fa-user-circle"></i></a>
            </div>
        </div>
    </header>

    <main>
        <div class="profile-container">
            <div class="profile-header">
                <div class="profile-image">
                    <img src="https://via.placeholder.com/150" alt="User Profile Picture">
                </div>
                <div class="profile-info">
                    <h2 class="username">username</h2>
                    <div class="profile-stats">
                        <span><strong>20</strong> posts</span>
                        <span><strong>300</strong> followers</span>
                        <span><strong>180</strong> following</span>
                    </div>
                </div>
            </div>
            <div class="profile-posts">
                <div class="post">
                    <img src="https://via.placeholder.com/300" alt="Post Image">
                </div>
                <div class="post">
                    <img src="https://via.placeholder.com/300" alt="Post Image">
                </div>
                <div class="post">
                    <img src="https://via.placeholder.com/300" alt="Post Image">
                </div>
                <!-- Додайте більше постів тут -->
            </div>
        </div>
    </main>
</body>
</html>

